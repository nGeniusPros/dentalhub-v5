{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "Node",
    "module": "ES2020",
    "target": "ES2020",
    "types": ["node"],
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "diagnostics": true,
    "traceResolution": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}